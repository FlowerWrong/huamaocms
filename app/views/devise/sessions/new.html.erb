
<p class="text-center pv">登录</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-lg' }) do |f| %>
  <div class="form-group has-feedback">
    <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'exampleInputEmail1' %>
    <span class="fa fa-envelope form-control-feedback text-muted"></span>
  </div>
  <div class="form-group has-feedback">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'exampleInputPassword1' %>
     <span class="fa fa-lock form-control-feedback text-muted"></span>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="clearfix">
    <div class="checkbox c-checkbox pull-left mt0">
      <label>
        <%= f.check_box :remember_me %>
        <span class="fa fa-check"></span>记住我
      </label>
    </div>
    </div>
  </div>
  <% end -%>
  <%= f.submit "登录", class: "btn btn-block btn-primary mt-lg" %>
<% end %>

<%= render "devise/shared/links" %>
