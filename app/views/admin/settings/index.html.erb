<% content_for :page_title do %>
  <%= t 'activerecord.models.setting' %><%= t 'form.list' %>
<% end %>

<% content_for :content_title do %>
  <%= t 'activerecord.models.setting' %><%= t 'form.list' %>
  <small data-localize="dashboard.WELCOME">欢迎来到码农的世界！</small>
<% end %>

<% content_for :page_only_css do %>
  <%= stylesheet_link_tag 'table', media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<% content_for :page_only_js do %>
  <%= javascript_include_tag 'table', 'data-turbolinks-track' => true %>
<% end %>

<!-- START DATATABLE CONTRAILER -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t 'activerecord.models.setting' %><%= t 'form.list' %>
      </div>
      <div class="panel-body">
        <table id="datatable-contrailer" class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= t 'activerecord.attributes.setting.slug' %></th>
              <th><%= t 'activerecord.attributes.setting.config_key' %></th>
              <th><%= t 'activerecord.attributes.setting.config_value' %></th>
              <th><%= t 'activerecord.attributes.setting.destroyable' %></th>
              <th><%= t 'activerecord.attributes.setting.editable' %></th>
              <th><%= t 'form.action' %></th>
            </tr>
          </thead>
          <tbody>
            <% @settings.each do |setting| %>
              <tr>
                <td><%= setting.slug %></td>
                <td><%= setting.config_key %></td>
                <td><%= setting.config_value %></td>
                <td><%= setting.destroyable %></td>
                <td><%= setting.editable %></td>
                <td>
                  <%= link_to t('form.show'), admin_setting_path(setting) %>
                  <% if setting.editable %>
                  |
                  <%= link_to t('form.edit'), edit_admin_setting_path(setting) %>
                  <% end %>
                  <% if setting.destroyable %>
                  |
                  <%= link_to t('form.destroy'), admin_setting_path(setting), method: :delete, data: { confirm: t('form.are_u_sure') } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.setting.slug' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.setting.config_key' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.setting.config_value' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.setting.destroyable' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.setting.editable' %>" class="form-control input-sm datatable_input_col_search">
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE CONTRAILER -->

<%= link_to t('form.new'), new_admin_setting_path, class: 'btn btn-info' %>
