<% content_for :page_title do %>
  <%= t('form.show') %><%= t 'activerecord.models.post' %>
<% end %>

<% content_for :content_title do %>
  <%= t('form.show') %><%= t 'activerecord.models.post' %>
  <small data-localize="dashboard.WELCOME">欢迎来到码农的世界！</small>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <!-- START panel-->
    <div class="panel panel-default">
      <div class="panel-heading"><%= t('form.show') %><%= t 'activerecord.models.post' %></div>
      <div class="panel-body">
        <table class="table table-bordered table-striped" style="clear: both" id="post">
          <tbody>
            <tr>
              <td width="35%"><%= t 'form.action' %></td>
              <td width="65%">
                <%= link_to t('form.edit'), edit_admin_post_path(@post) %> | <%= link_to t('form.back'), admin_posts_path %>
              </td>
            </tr>
            <tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.title') %></td>
              <td width="65%"><%= @post.title %></td>
            </tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.category_id') %></td>
              <td width="65%"><%= @post.category.name unless @post.category.blank? %></td>
            </tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.user_id') %></td>
              <td width="65%"><%= @post.user.email unless @post.user.nil? %></td>
            </tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.author') %></td>
              <td width="65%"><%= @post.author %></td>
            </tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.img') %></td>
              <td width="65%"><%= image_tag(@post.img_url, width: '72', height: '72') if @post.img? %></td>
            </tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.publish_time') %></td>
              <td width="65%"><%= @post.publish_time %></td>
            </tr>
            <tr>
              <td width="35%"><%= t('activerecord.attributes.post.content') %></td>
              <td width="65%"><%=raw @post.content %></td>
            </tr>
          </tbody>
        </table>
     </div>
    </div>
    <!-- END panel-->
  </div>
</div>
