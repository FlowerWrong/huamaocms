<% content_for :page_title do %>
  <%= t 'activerecord.models.category' %><%= t 'form.list' %>
<% end %>

<% content_for :content_title do %>
  <%= t 'activerecord.models.category' %><%= t 'form.list' %>
  <small data-localize="dashboard.WELCOME">欢迎！</small>
<% end %>

<% content_for :page_only_css do %>
  <%= stylesheet_link_tag 'table', media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<% content_for :page_only_js do %>
  <%= javascript_include_tag 'table', 'data-turbolinks-track' => true %>
<% end %>

<!-- START DATATABLE CONTRAILER -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t 'activerecord.models.category' %><%= t 'form.list' %>
      </div>
      <div class="panel-body">
        <table id="datatable-contrailer" class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= t 'activerecord.attributes.category.name' %></th>
              <th><%= t 'activerecord.attributes.category.slug' %></th>
              <th><%= t 'form.action' %></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.slug %></td>
                <td>
                  <%= link_to t('form.show'), admin_category_path(category) %>
                  |
                  <%= link_to t('form.edit'), edit_admin_category_path(category) %>
                  |
                  <%= link_to t('form.destroy'), admin_category_path(category), method: :delete, data: { confirm: t('form.are_u_sure') } %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.category.name' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.category.slug' %>" class="form-control input-sm datatable_input_col_search">
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE CONTRAILER -->

<%= link_to t('form.new'), new_admin_category_path, class: 'btn btn-info' %>
