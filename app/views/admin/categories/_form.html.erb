<%= form_for([:admin, @category], class: 'form-horizontal') do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' do %>
        <%= t('activerecord.attributes.category.name') %>
        <span class="symbol required">*</span>
      <% end %>
      <div class="col-sm-10">
      <%= f.text_field :name, required: 'required', class: 'form-control' %>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <div class="form-group">
      <%= f.label :slug, class: 'col-sm-2 control-label' do %>
        <%= t('activerecord.attributes.category.slug') %>
        <span class="symbol required">*</span>
      <% end %>
      <div class="col-sm-10">
      <%= f.text_field :slug, required: 'required', class: 'form-control' %>
      </div>
    </div>
  </fieldset>
  <div class="panel-footer text-center">
    <%= f.submit t('form.submit'), class: 'btn btn-info' %>
    <%= link_to t('form.back'), admin_categories_path, class: 'btn btn-info' %>
  </div>
<% end %>
