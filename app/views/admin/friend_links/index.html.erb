<% content_for :page_title do %>
  <%= t 'activerecord.models.friend_link' %><%= t 'form.list' %>
<% end %>

<% content_for :content_title do %>
  <%= t 'activerecord.models.friend_link' %><%= t 'form.list' %>
  <small data-localize="dashboard.WELCOME">欢迎来到码农的世界！</small>
<% end %>

<% content_for :page_only_css do %>
  <%= stylesheet_link_tag 'table', media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<% content_for :page_only_js do %>
  <%= javascript_include_tag 'table', 'data-turbolinks-track' => true %>
<% end %>

<!-- START DATATABLE CONTRAILER -->
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t 'activerecord.models.friend_link' %><%= t 'form.list' %>
      </div>
      <div class="panel-body">
        <table id="datatable-contrailer" class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= t 'activerecord.attributes.friend_link.name' %></th>
              <th><%= t 'activerecord.attributes.friend_link.f_url' %></th>
              <th><%= t 'activerecord.attributes.friend_link.f_logo' %></th>
              <th><%= t 'activerecord.attributes.friend_link.f_group_id' %></th>
              <th><%= t 'form.action' %></th>
            </tr>
          </thead>
          <tbody>
            <% @friend_links.each do |friend_link| %>
              <tr>
                <td><%= friend_link.name %></td>
                <td><%= friend_link.f_url %></td>
                <td><%= image_tag(friend_link.f_logo_url, width: '36', height: '36') if friend_link.f_logo? %></td>
                <td><%= friend_link.f_group_id %></td>
                <td>
                  <%= link_to t('form.show'), admin_friend_link_path(friend_link) %>
                  |
                  <%= link_to t('form.edit'), edit_admin_friend_link_path(friend_link) %>
                  |
                  <%= link_to t('form.destroy'), admin_friend_link_path(friend_link), method: :delete, data: { confirm: t('form.are_u_sure') } %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.friend_link.name' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.friend_link.f_url' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.friend_link.f_logo' %>" class="form-control input-sm datatable_input_col_search">
              </th>
              <th>
                <input type="text" name="" placeholder="<%= t('form.filter') %><%= t 'activerecord.attributes.friend_link.f_group_id' %>" class="form-control input-sm datatable_input_col_search">
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE CONTRAILER -->

<%= link_to t('form.new'), new_admin_friend_link_path, class: 'btn btn-info' %>
